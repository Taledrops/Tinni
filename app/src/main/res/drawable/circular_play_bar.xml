<?xml version="1.0" encoding="utf-8"?>

<!--
 * <h1>Circular Play Bar</h1>
 * A ring with a colorAccentSemiTransparent gradient to indicate progress
 *
 * @author Nassim Amar
 * @version 1.0
 * @since 25.06.2020
-->

<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">
    <shape
        android:innerRadiusRatio="3.5"
        android:shape="ring"
        android:thickness="@dimen/playProgressThickness"
        android:useLevel="true">

        <gradient
            android:angle="0"
            android:endColor="@color/colorAccentSemiTransparent"
            android:startColor="@color/colorAccentSemiTransparent"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>