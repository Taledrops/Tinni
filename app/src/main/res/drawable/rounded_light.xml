<?xml version="1.0" encoding="UTF-8"?>

<!--
 * <h1>Rounded Light</h1>
 * Rounded box with light background and rounded corners
 *
 * @author Nassim Amar
 * @version 1.0
 * @since 20.06.2020
-->

<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorLightSecondary"
    tools:targetApi="lollipop">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLight"/>
            <stroke
                android:width="@dimen/tagBorder"
                android:color="@color/colorLight"/>
            <padding
                android:bottom="@dimen/mediumMargin"
                android:left="@dimen/mediumMargin"
                android:right="@dimen/mediumMargin"
                android:top="@dimen/mediumMargin"/>
            <corners
                android:radius="@dimen/cornerRadius"/>
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightSecondary" />
            <corners android:radius="@dimen/cornerRadius" />
        </shape>
    </item>
</ripple>