<?xml version="1.0" encoding="UTF-8"?>

<!--
 * <h1>Primary Dark Ripple</h1>
 * A rectangle with rounded corners and a colorPrimaryDark ripple
 *
 * @author Nassim Amar
 * @version 1.0
 * @since 25.06.2020
-->

<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorPrimaryDark"
    tools:targetApi="lollipop">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <padding
                android:bottom="@dimen/mediumMargin"
                android:left="@dimen/mediumMargin"
                android:right="@dimen/mediumMargin"
                android:top="@dimen/mediumMargin"/>
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</ripple>