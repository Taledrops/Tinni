<?xml version="1.0" encoding="utf-8"?>

<!--
 * <h1>Rounded Primary Dark Transparent light</h1>
 * Rounded box with semi transparent background and round corners
 *
 * @author Nassim Amar
 * @version 1.0
 * @since 20.06.2020
-->

<ripple
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:color="@color/colorPrimaryDark"
tools:targetApi="lollipop">

<item>
    <shape
        android:shape="rectangle"
        android:padding="@dimen/mediumMargin">
        <solid android:color="@color/colorPrimaryDarkTransparentLight"/>
        <corners android:radius="@dimen/cornerRadiusBig" />
    </shape>
</item>

<item android:id="@android:id/mask">
    <shape android:shape="rectangle">
        <solid android:color="@color/colorPrimaryDark" />
        <corners android:radius="@dimen/cornerRadiusBig" />
    </shape>
</item>
</ripple>