<?xml version="1.0" encoding="UTF-8"?>

<!--
 * <h1>Rounded Transparent Border</h1>
 * Rounded box with transparent background and rounded borders and a ripple effect
 * All english texts for multiple use
 *
 * @author Nassim Amar
 * @version 1.0
 * @since 19.06.2020
-->

<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorPrimaryDark"
    tools:targetApi="lollipop">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="@dimen/tagBorder"
                android:color="@color/colorSecondary"/>
            <padding
                android:bottom="@dimen/mediumMargin"
                android:left="@dimen/mediumMargin"
                android:right="@dimen/mediumMargin"
                android:top="@dimen/mediumMargin"/>
            <corners
                android:radius="@dimen/cornerRadius"/>
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="@dimen/cornerRadius" />
        </shape>
    </item>
</ripple>