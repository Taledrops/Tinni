<?xml version="1.0" encoding="UTF-8"?>

<!--
 * <h1>Light Ripple No padding</h1>
 * A rectangle with rounded corners and a colorLightTransparent ripple without paddings
 *
 * @author Nassim Amar
 * @version 1.0
 * @since 05.07.2020
-->

<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorLightTransparent"
    tools:targetApi="lollipop">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightTransparent" />
        </shape>
    </item>
</ripple>