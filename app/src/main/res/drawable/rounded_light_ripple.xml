<?xml version="1.0" encoding="UTF-8"?>

<!--
 * <h1>Music Bar</h1>
 * Transparent box with light ripple
 *
 * @author Nassim Amar
 * @version 1.0
 * @since 21.06.2020
-->

<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorLightTransparent"
    tools:targetApi="lollipop">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <padding
                android:bottom="@dimen/mediumMargin"
                android:left="@dimen/mediumMargin"
                android:right="@dimen/mediumMargin"
                android:top="@dimen/mediumMargin"/>
            <corners
                android:radius="@dimen/cornerRadius" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightTransparent" />
            <corners android:radius="@dimen/mediumMargin" />
        </shape>
    </item>
</ripple>