<?xml version="1.0" encoding="utf-8" ?>

<!--
  * <h1>Source Sans Pro</h1>
  * Declaring fonts for regular, bold and italic
  * Font source: https://fonts.google.com/specimen/Source+Sans+Pro
  *
  * @author Nassim Amar
  * @version 1.0
  * @since 18.06.2020
-->

<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/sourcesanspro_regular" />
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/sourcesanspro_bold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/sourcesanspro_italic" />
</font-family>