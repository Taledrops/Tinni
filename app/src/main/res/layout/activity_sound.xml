<?xml version="1.0" encoding="utf-8"?>

<!--
  * <h1>Sound Layout</h1>
  * Layout for the Sound Activity
  *
  * @author Nassim Amar
  * @version 1.0
  * @since 25.06.2020
-->

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.example.tinni.ui.sound.SoundViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/colorPrimaryDark"
                app:scrimAnimationDuration="@integer/anim_length_medium"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <FrameLayout
                    android:id="@+id/top"
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/primary_dark_to_primary_to_primary_dark">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@{vm.current.title}"
                        android:id="@+id/soundImg"/>
                    <com.example.tinni.custom.AnimatedImageView
                        android:id="@+id/kenBurns"
                        android:visibility="gone"
                        android:kenBurnsSoundResourceId="@{vm.current.img}"
                        android:kenBurnsSoundImageUri="@{vm.current.imgUri}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/layer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:background="@android:color/black" />
                    <LinearLayout
                        android:id="@+id/headContent"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/defaultMargin"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.current.title}"
                            android:gravity="center"
                            style="@style/Heading" />
                        <TextView
                            android:id="@+id/currentHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="@{vm.session != null &amp;&amp; vm.program != null ? View.VISIBLE : View.GONE, default=gone}"
                            android:text="@{String.format(@string/session_x_of_y, vm.session.id, vm.program.title)}"
                            android:layout_marginTop="@dimen/smallMargin"
                            android:gravity="center"
                            style="@style/RegularText" />
                        <TextView
                            android:id="@+id/totalTime"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/bigMargin"
                            android:layout_marginEnd="@dimen/bigMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:layout_height="wrap_content"
                            android:totalTime="@{vm.length}"
                            style="@style/SubHeading" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/smallMargin"
                            android:layout_marginEnd="@dimen/smallMargin"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:layout_marginBottom="@dimen/defaultMargin">
                            <ImageView
                                android:id="@+id/rewind"
                                android:layout_width="@dimen/iconSizeToolbar"
                                android:layout_height="@dimen/iconSizeToolbar"
                                android:layout_weight="0"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/circle_light_ripple"
                                android:padding="@dimen/iconPadding"
                                android:tint="@color/colorLight"
                                android:contentDescription="@string/rewind"
                                android:layout_gravity="center"
                                android:src="@drawable/rewind"/>
                            <FrameLayout
                                android:id="@+id/playContainer"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/bigMargin"
                                android:layout_marginEnd="@dimen/bigMargin"
                                android:layout_height="wrap_content">
                                <me.tankery.lib.circularseekbar.CircularSeekBar
                                    android:id="@+id/progress"
                                    android:layout_width="@dimen/playProgressSize"
                                    android:layout_height="@dimen/playProgressSize"
                                    app:cs_circle_color="@color/colorAccentTransparent"
                                    app:cs_circle_style="butt"
                                    android:soundProgressCircular="@{vm.current.time}"
                                    android:soundMaxProgressCircular="@{vm.length}"
                                    app:cs_circle_stroke_width="@dimen/playProgressThickness"
                                    app:cs_pointer_color="@android:color/transparent"
                                    app:cs_pointer_halo_color="@android:color/transparent"
                                    app:cs_hide_progress_when_empty="true"
                                    app:cs_pointer_halo_color_ontouch="@android:color/transparent"
                                    app:cs_circle_progress_color="@color/colorAccentMiniTransparent"
                                    android:layout_gravity="center" />
                                <FrameLayout
                                    android:layout_width="@dimen/playSize"
                                    android:layout_height="@dimen/playSize"
                                    android:background="@drawable/circle_accent_ripple"
                                    android:playHandle="@{vm.current.playing}"
                                    android:padding="@dimen/mediumMargin"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:id="@+id/play"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:background="@drawable/circle_accent_ripple"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/defaultMargin"
                                        android:contentDescription="@string/play"
                                        android:tint="@color/colorLight"
                                        tools:ignore="TooDeepLayout" />
                                    <ProgressBar
                                        android:id="@+id/loading"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/defaultMargin"
                                        android:indeterminateTint="@color/colorLight"
                                        android:layout_gravity="center"/>
                                </FrameLayout>
                                <ProgressBar
                                    android:id="@+id/buffer"
                                    android:layout_width="@dimen/playProgressSize"
                                    android:layout_height="@dimen/playProgressSize"
                                    android:indeterminate="false"
                                    android:progressDrawable="@drawable/circular_buffer_bar"
                                    android:background="@drawable/ring_buffer"
                                    android:alpha="0.5"
                                    android:layout_gravity="center"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:max="100"
                                    android:progress="0" />
                            </FrameLayout>
                            <ImageView
                                android:id="@+id/forward"
                                android:layout_width="@dimen/iconSizeToolbar"
                                android:layout_height="@dimen/iconSizeToolbar"
                                android:layout_weight="0"
                                android:clickable="true"
                                android:focusable="true"
                                android:contentDescription="@string/forward"
                                android:background="@drawable/circle_light_ripple"
                                android:padding="@dimen/iconPadding"
                                android:tint="@color/colorLight"
                                android:layout_gravity="center"
                                android:src="@drawable/forward"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:currentTime="@{vm.current.time}"
                            style="@style/RegularText" />
                        <ImageView
                            android:id="@+id/repeat"
                            android:layout_width="@dimen/iconSizeHuge"
                            android:layout_height="@dimen/iconSizeHuge"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="@{vm.session == null || vm.program == null ? View.VISIBLE : View.GONE, default=visible}"
                            android:background="@drawable/circle_light_ripple"
                            android:padding="@dimen/iconPadding"
                            android:contentDescription="@string/repeat"
                            android:layout_marginTop="@dimen/defaultMargin"
                            android:layout_gravity="center"
                            android:repeat="@{vm.repeat}"
                            android:onClick="@{() -> vm.changeRepeat()}"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/defaultMargin">
                            <ImageView
                                android:id="@+id/volumeButton"
                                android:layout_width="@dimen/iconSizeToolbar"
                                android:layout_height="@dimen/iconSizeToolbar"
                                android:layout_weight="0"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="@drawable/circle_light_ripple"
                                android:padding="@dimen/iconPadding"
                                android:tint="@color/colorLight"
                                android:contentDescription="@string/volume"
                                android:layout_gravity="center"
                                android:src="@drawable/volume"/>
                            <SeekBar
                                android:id="@+id/volumeBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingTop="@dimen/mediumMargin"
                                android:paddingBottom="@dimen/mediumMargin"
                                android:minHeight="@dimen/seekbarHeight"
                                android:maxHeight="@dimen/seekbarHeight"
                                android:progress="60"
                                android:max="100"
                                android:splitTrack="false"
                                android:progressDrawable="@drawable/volume_bar"
                                android:thumb="@drawable/music_thumb" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/scrollDown"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:clickable="true"
                        android:padding="@dimen/smallMargin"
                        android:focusable="true"
                        android:background="@drawable/rounded_light_ripple"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="@dimen/defaultMargin"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/details"
                            style="@style/SubHeading" />
                        <ImageView
                            android:contentDescription="@string/details"
                            android:layout_marginTop="@dimen/tinyMargin"
                            style="@style/ScrollArrow" />
                    </LinearLayout>
                </FrameLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:visibility="invisible"
                    android:background="@android:color/transparent"
                    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/smallMargin"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:singleLine="true"
                            android:text="@{vm.current.title}"
                            android:ellipsize="end"
                            android:layout_marginEnd="@dimen/smallMargin"
                            style="@style/SmallHeading"/>
                        <ImageView
                            android:id="@+id/fav"
                            android:layout_width="@dimen/iconSizeToolbar"
                            android:layout_weight="0"
                            android:layout_height="@dimen/iconSizeToolbar"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/circle_light_ripple"
                            android:padding="@dimen/iconPadding"
                            android:contentDescription="@string/favorites"
                            android:layout_marginEnd="@dimen/smallMargin"
                            android:liked="@{vm.liked}"/>
                        <ImageView
                            android:id="@+id/more"
                            android:layout_width="@dimen/iconSizeToolbar"
                            android:layout_weight="0"
                            android:layout_height="@dimen/iconSizeToolbar"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/actions"
                            android:background="@drawable/circle_light_ripple"
                            android:padding="@dimen/iconPadding"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dots"
                            android:tint="@color/colorLight" />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottom"
            android:background="@drawable/primary_to_primary_light_to_primary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:id="@+id/scroll"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/scrollContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:visibility="@{vm.current.description != null &amp;&amp; vm.current.description.length() > 0 ? View.VISIBLE : View.GONE, default=visible}"
                        android:layout_marginTop="@dimen/defaultMargin"
                        android:paddingStart="@dimen/defaultMargin"
                        android:paddingEnd="@dimen/defaultMargin"
                        style="@style/MediumHeading" />
                    <com.example.tinni.custom.ExpandableTextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/smallMargin"
                        android:layout_height="wrap_content"
                        android:visibility="@{vm.current.description != null &amp;&amp; vm.current.description.length() > 0 ? View.VISIBLE : View.GONE, default=visible}"
                        android:paddingStart="@dimen/defaultMargin"
                        android:description="@{vm.current.description}"
                        android:paddingEnd="@dimen/defaultMargin"/>
                    <LinearLayout
                        android:id="@+id/notesContainer"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/defaultMargin"
                        android:paddingStart="@dimen/defaultMargin"
                        android:paddingEnd="@dimen/defaultMargin"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_note"
                            style="@style/MediumHeading" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/smallMargin"
                            android:layout_height="wrap_content"
                            android:text="@={vm.note}"
                            android:visibility="@{vm.note != null &amp;&amp; vm.note.length() > 0 ? View.VISIBLE : View.GONE, default=gone}"
                            style="@style/RegularText"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_accent"
                            android:layout_marginTop="@dimen/smallMargin"
                            android:gravity="center"
                            android:visibility="@{vm.note == null || vm.note.length() == 0 ? View.VISIBLE : View.GONE, default=visible}"
                            android:paddingTop="@dimen/smallMargin"
                            android:paddingEnd="@dimen/bigMargin"
                            android:paddingBottom="@dimen/smallMargin"
                            android:paddingStart="@dimen/bigMargin">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/smallMargin"
                                android:text="@string/add"
                                style="@style/SmallHeading" />
                            <ImageView
                                android:layout_width="@dimen/iconSizeSmall"
                                android:layout_height="@dimen/iconSizeSmall"
                                android:contentDescription="@string/add"
                                android:src="@drawable/plus"
                                android:tint="@color/colorLight" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:id="@+id/bottomPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/mediumMargin"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryDark">
                <FrameLayout
                    android:layout_width="@dimen/playSmallSize"
                    android:layout_height="@dimen/playSmallSize"
                    android:background="@drawable/circle_accent_ripple"
                    android:layout_marginEnd="@dimen/defaultMargin"
                    android:playHandle="@{vm.current.playing}"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/bottomPlay"
                        android:layout_width="@dimen/playSmallSize"
                        android:layout_height="@dimen/playSmallSize"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/play"
                        android:background="@drawable/circle_accent_ripple"
                        android:padding="@dimen/defaultMargin"
                        android:layout_gravity="center"
                        android:tint="@color/colorLight" />
                    <ProgressBar
                        android:id="@+id/bottomLoading"
                        android:layout_width="@dimen/playSmallSize"
                        android:layout_height="@dimen/playSmallSize"
                        android:indeterminateTint="@color/colorLight"
                        android:padding="@dimen/mediumMargin"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/smallPlayerMinWidth"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:currentTime="@{vm.current.time}"
                    style="@style/RegularText" />
                <SeekBar
                    android:id="@+id/bottomProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/mediumMargin"
                    android:paddingBottom="@dimen/mediumMargin"
                    android:minHeight="@dimen/seekbarHeight"
                    android:maxHeight="@dimen/seekbarHeight"
                    android:soundProgress="@{vm.current.time}"
                    android:soundMaxProgress="@{vm.length}"
                    android:layout_marginEnd="@dimen/smallMargin"
                    android:splitTrack="false"
                    android:progressDrawable="@drawable/music_bar"
                    android:thumb="@drawable/music_thumb" />
                <ImageView
                    android:id="@+id/up"
                    android:contentDescription="@string/goUp"
                    style="@style/ScrollArrowUp"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>