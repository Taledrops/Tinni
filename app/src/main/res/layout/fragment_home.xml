<?xml version="1.0" encoding="utf-8"?>

<!--
  * <h1>XML Layout for the HOME fragment</h1>
  *
  * @author Nassim Amar
  * @version 1.0
  * @since 07.07.2020
-->

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.example.tinni.ui.home.HomeViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/defaultMargin"
                android:paddingEnd="@dimen/defaultMargin"
                android:layout_marginTop="@dimen/defaultMargin"
                android:text="@string/welcome"
                style="@style/Heading" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/defaultMargin"
                android:paddingEnd="@dimen/defaultMargin"
                android:layout_marginTop="@dimen/smallMargin"
                android:text="@string/welcome_sub"
                style="@style/SubHeading" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultMargin"
                android:layout_marginStart="@dimen/defaultMargin"
                android:layout_marginEnd="@dimen/defaultMargin"
                android:baselineAligned="false"
                android:padding="@dimen/smallMargin"
                android:weightSum="5"
                android:background="@drawable/edittext_primary_dark_transparent_light">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="@{() -> vm.setRating(5)}"
                    tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="@dimen/playSmallSize"
                            android:layout_height="@dimen/playSmallSize"
                            android:src="@drawable/verygood"
                            android:contentDescription="@string/very_good"
                            android:tint="@{vm.rating != 5 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/very_good"
                            android:layout_marginTop="@dimen/tinyMargin"
                            style="@style/RegularText"
                            android:textColor="@{vm.rating != 5 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="@{() -> vm.setRating(4)}"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="@dimen/playSmallSize"
                        android:layout_height="@dimen/playSmallSize"
                        android:src="@drawable/good"
                        android:contentDescription="@string/good"
                        android:tint="@{vm.rating != 4 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good"
                        android:layout_marginTop="@dimen/tinyMargin"
                        style="@style/RegularText"
                        android:textColor="@{vm.rating != 4 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="@{() -> vm.setRating(3)}"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="@dimen/playSmallSize"
                        android:layout_height="@dimen/playSmallSize"
                        android:src="@drawable/neutral"
                        android:contentDescription="@string/neutral"
                        android:tint="@{vm.rating != 3 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/neutral"
                        android:layout_marginTop="@dimen/tinyMargin"
                        style="@style/RegularText"
                        android:textColor="@{vm.rating != 3 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="@{() -> vm.setRating(2)}"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="@dimen/playSmallSize"
                        android:layout_height="@dimen/playSmallSize"
                        android:src="@drawable/bad"
                        android:contentDescription="@string/bad"
                        android:tint="@{vm.rating != 2 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bad"
                        android:layout_marginTop="@dimen/tinyMargin"
                        style="@style/RegularText"
                        android:textColor="@{vm.rating != 2 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="@{() -> vm.setRating(1)}"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:layout_width="@dimen/playSmallSize"
                        android:layout_height="@dimen/playSmallSize"
                        android:src="@drawable/verybad"
                        android:contentDescription="@string/miserable"
                        android:tint="@{vm.rating != 1 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/miserable"
                        android:layout_marginTop="@dimen/tinyMargin"
                        style="@style/RegularText"
                        android:textColor="@{vm.rating != 1 ? @color/colorLightSecondary : @color/colorAccent, default=@color/colorLightSecondary}"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_program"
                android:visibility="@{vm.currentProgram != null ? View.VISIBLE : View.GONE, default=visible}"
                android:layout_marginTop="@dimen/defaultMargin"
                android:paddingStart="@dimen/defaultMargin"
                android:paddingEnd="@dimen/defaultMargin"
                style="@style/MediumHeading" />
            <com.example.tinni.custom.Placeholder
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/placeholderCurrentProgramMargin"
                android:layout_marginStart="@dimen/defaultMargin"
                android:layout_marginEnd="@dimen/defaultMargin"
                android:placeholderVisibility="@{vm.loading}">

                <include layout="@layout/program_placeholder" />

            </com.example.tinni.custom.Placeholder>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mediumMargin"
                android:layout_marginStart="@dimen/defaultMargin"
                android:layout_marginEnd="@dimen/defaultMargin"
                android:clickable="true"
                android:focusable="true"
                android:visibility="@{vm.currentProgram != null &amp;&amp; !vm.loading ? View.VISIBLE : View.GONE, default=gone}"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/rounded_primary_dark_ripple"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/cornerRadius"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/programImg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/galleryHeight"
                        android:programImg="@{vm.currentProgram}"
                        android:contentDescription="@string/program"
                        android:programBitmap="@{vm.currentProgram}"
                        android:scaleType="centerCrop"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:background="@drawable/dark_to_transparent"
                            android:layout_gravity="bottom"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/defaultMargin"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="@dimen/playSmallSize"
                                android:layout_height="@dimen/playSmallSize"
                                android:background="@drawable/circle_accent"
                                android:src="@drawable/play"
                                android:layout_weight="0"
                                android:padding="@dimen/defaultMargin"
                                android:contentDescription="@string/play"
                                android:tint="@color/colorLight" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/defaultMargin"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{String.format(@string/sounds_count, vm.currentProgram.sessions.size())}"
                                    style="@style/SubHeading" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{vm.currentProgram.title}"
                                    style="@style/SmallHeading" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mediumMargin"
                        android:layout_marginEnd="@dimen/mediumMargin"
                        android:visibility="@{!vm.currentProgram.custom ? View.GONE : View.VISIBLE, default=gone}"
                        android:layout_gravity="end"
                        style="@style/SecondaryBox"
                        android:text="@string/custom"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recently_played"
                android:visibility="@{vm.last != null &amp;&amp; vm.last.size() > 0 ? View.VISIBLE : View.GONE, default=visible}"
                android:layout_marginTop="@dimen/defaultMargin"
                android:paddingStart="@dimen/defaultMargin"
                android:paddingEnd="@dimen/defaultMargin"
                style="@style/MediumHeading" />
            <com.example.tinni.custom.Placeholder
                android:id="@+id/lastPlaceholder"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/placeholderItemMargin"
                android:placeholderVisibility="@{vm.loading}"
                android:layout_height="wrap_content">

                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>

            </com.example.tinni.custom.Placeholder>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/last"
                android:paddingTop="@dimen/mediumMargin"
                android:paddingBottom="@dimen/mediumMargin"
                android:visibility="@{vm.last != null &amp;&amp; vm.last.size() > 0 &amp;&amp; !vm.loading ? View.VISIBLE : View.GONE, default=gone}"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_sounds"
                android:visibility="@{vm.favorites != null &amp;&amp; vm.favorites.size() > 0 ? View.VISIBLE : View.GONE, default=visible}"
                android:layout_marginTop="@dimen/defaultMargin"
                android:paddingStart="@dimen/defaultMargin"
                android:paddingEnd="@dimen/defaultMargin"
                style="@style/MediumHeading" />
            <com.example.tinni.custom.Placeholder
                android:id="@+id/favoritesPlaceholder"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/placeholderItemMargin"
                android:placeholderVisibility="@{vm.loading}"
                android:layout_height="wrap_content">

                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>
                <include layout="@layout/item_placeholder"/>

            </com.example.tinni.custom.Placeholder>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorites"
                android:paddingTop="@dimen/mediumMargin"
                android:paddingBottom="@dimen/mediumMargin"
                android:visibility="@{vm.favorites != null &amp;&amp; vm.favorites.size() > 0 &amp;&amp; !vm.loading ? View.VISIBLE : View.GONE, default=gone}"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>